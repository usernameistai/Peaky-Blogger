<% layout('layouts/boilerplate') %>
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css'>
<link rel='stylesheet' href='/stylesheets/contactform.css'>

    <main class="container">
        <section class="animate__animated animate__zoomInDown">
            <div class='my-3'>
                <div class='shadow pb-shadow back rounded' style='color: #f9f8fd;'>
                    <h1 style=' margin: 1rem 0 1rem 0; text-align: center;'><i class='fas fa-tree fa-2x'></i><i class='fas fa-utensils fa-2x'></i> Email Peaky Blogger</h1>
                    <h4 style='text-align: center;'>Please email me any questions or support you might have</h4>
                </div>
            </div>
        </section>
        <div class='animate__animated animate__bounceInLeft pb-shadow rounded mb-5 email'>
            <h1 class='text-center pt-1'>Email Me</h1>
            <div class='emailform'>
                <form action='/send-email' method='POST'>
                    <div class='form-group'>
                        <label class='form-label' for='name'>Name</label>
                        <input class='form-control' type='text' name='name' id='name' autofocus required>
                    </div>
                    <div class='form-group'>
                        <label class='form-label' for='email'>Email Address</label>
                        <input  class='form-control' type='email' name='email' id='email' required> 
                    </div>
                    <div class='form-group'>
                        <label class='form-label' for='phone'>Phone Number</label>
                        <input class='form-control' type='text' name='phone' id='phone' required>
                    </div>
                    <div class='form-group'> 
                        <label class='form-label' for='message'>Message</label>
                        <textarea class='form-control' name='message' rows='5' id='message' required></textarea>
                    </div>
                    <div class='form-group my-3 pb-3 d-flex'>
                        <button class='btn woodlandgreen form-control w25 text-white mx-auto' type='submit' value='Send'>submit</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
 